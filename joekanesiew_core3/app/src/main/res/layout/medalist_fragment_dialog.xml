<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/modalCountryName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Australia"
                android:textAlignment="textStart"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/modalCountryGold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="147 gold medals"
                android:textAlignment="textStart"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/modalCountrySilver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10 silver medals"
                android:textAlignment="textStart"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/modalCountryBronze"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10 bronze medals"
                android:textAlignment="textStart"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:id="@+id/modalIOC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="AUS"
                android:textAlignment="center"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>